<% include blocs/head.ejs %>

<section class="section" id="login">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <div class="title-box">
                    <br>
                    <h3 class="fadeIn animated wow text-white" data-wow-delay=".1s">Je me connecte</h3>
                    <% if (typeof error != 'undefined') { %>
                    <div class="alert alert-danger fadeIn animated wow" data-wow-delay=".3s">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <%= error %>
                    </div>
                    <% } %>
                    <form method="post" class="form form-horizontal">
                        <div class="form-group">
                            <label for="username" class="col-md-4 control-label"></label>
                            <div class="col-md-4">
                                <input type="text" class="form-control text-center" name="username" placeholder="Pseudo" autofocus required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="col-md-4 control-label"></label>
                            <div class="col-md-4">
                                <input type="password" class="form-control text-center" name="password" placeholder="Mot de passe" autofocus required>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary submit" value="Connexion">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<% include blocs/foot.ejs %>